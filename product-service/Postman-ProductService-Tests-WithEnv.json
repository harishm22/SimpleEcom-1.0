{
  "info": {
    "_postman_id": "simpleecom-product-service-tests-env",
    "name": "SimpleEcom Product Service Tests with Environment",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8082/api"
    }
  ],
  "item": [
    {
      "name": "Add Product",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwtToken}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/products",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "products"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Sample Product\",\n  \"description\": \"Sample product description\",\n  \"price\": 100.0,\n \"quantity\": 10.0\n}"
        }
      },
      "response": []
    },
    {
      "name": "Update Product",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwtToken}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/products/{{productId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "products",
            "{{productId}}"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Updated Product\",\n  \"description\": \"Updated description\",\n  \"price\": 150.0\n}"
        }
      },
      "response": []
    },
    {
      "name": "Delete Product",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwtToken}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/products/{{productId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "products",
            "{{productId}}"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Get Product",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwtToken}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/products/{{productId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "products",
            "{{productId}}"
          ]
        }
      },
      "response": []
    }
  ]
}
