{
  "info": {
    "name": "SimpleEcom User Service",
    "_postman_id": "12345678-abcd-efgh-ijkl-1234567890ab",
    "description": "Postman collection to test user-service endpoints including superadmin user fetch",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get User by Username (Superadmin)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{superadmin_jwt_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/admin/user/{{username}}",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "admin",
            "user",
            "{{username}}"
          ]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8081"
    },
    {
      "key": "superadmin_jwt_token",
      "value": ""
    },
    {
      "key": "username",
      "value": ""
    }
  ]
}
